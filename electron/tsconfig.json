{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "../dist-electron",
    "rootDir": "..",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": false,
    "isolatedModules": true,
    "types": ["node"],
    "paths": {
      "@/*": ["../src/*"]
    },
    "baseUrl": "."
  },
  "include": ["./**/*", "../src/types/**/*", "../src/lib/scanner/types.ts"],
  "exclude": ["node_modules"]
}
