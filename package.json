{
  "name": "paperflow",
  "private": true,
  "version": "3.0.0-alpha.1",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:e2e-electron": "playwright test --config=playwright.electron.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "electron:dev": "node scripts/dev-electron.js",
    "electron:build-web": "cross-env ELECTRON=true vite build",
    "electron:build": "tsc -b && npm run electron:build-web && npm run electron:compile && electron-builder",
    "electron:compile": "vite build --config vite.electron.config.ts",
    "electron:preview": "npm run build && npm run electron:compile && electron .",
    "electron:pack": "npm run electron:build -- --dir",
    "electron:dist": "npm run electron:build"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "browser-fs-access": "^0.35.0",
    "chokidar": "^4.0.0",
    "clsx": "^2.1.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.469.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "tailwind-merge": "^2.6.0",
    "tesseract.js": "^7.0.0",
    "uuid": "^11.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "fake-indexeddb": "^6.2.5",
    "globals": "^17.1.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.0",
    "prettier": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.0",
    "vitest": "^2.1.0",
    "wait-on": "^9.0.3",
    "workbox-window": "^7.3.0"
  }
}
